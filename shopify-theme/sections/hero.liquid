<section class="relative h-[600px]">
  <div class="absolute inset-0 bg-cover bg-center" style="background-image: url({{ section.settings.hero_image | img_url: 'master' }})"></div>
  <div class="absolute inset-0 bg-black bg-opacity-30"></div>
  <div class="relative container mx-auto px-4 h-full flex items-center">
    <div class="text-white max-w-xl">
      <h1 class="font-playfair text-5xl font-bold mb-4">{{ section.settings.heading }}</h1>
      <p class="text-xl mb-8">{{ section.settings.subtext }}</p>
      <a href="{{ section.settings.button_link }}" class="bg-white text-black px-8 py-3 inline-block hover:bg-gray-100 transition">
        {{ section.settings.button_text }}
      </a>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Modern Ethnic Wear"
    },
    {
      "type": "text",
      "id": "subtext",
      "label": "Subtext",
      "default": "Discover our new collection that blends traditional craftsmanship with contemporary design"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Hero",
      "category": "Hero"
    }
  ]
}
{% endschema %}
